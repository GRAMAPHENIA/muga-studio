---
// Importar estilos globales
import "../styles/global.css";
import Footer from "../components/ui/Footer/Footer.astro";
import { ClientRouter } from 'astro:transitions';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "MUGA STUDIO - Portafolio de Diseño Gráfico y Audiovisual",
  description = "Portafolio profesional especializado en Photoshop, Illustrator, Premiere Pro y After Effects. Showcasing de proyectos creativos y habilidades técnicas.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ClientRouter />
  </head>
  <body >
    <main>
      <slot />
    </main>
    <Footer />

    <script>
      if ('serviceWorker' in navigator) {
        if (import.meta.env.DEV) {
          // Unregister service worker in development
          navigator.serviceWorker.getRegistrations().then(registrations => {
            registrations.forEach(registration => {
              registration.unregister().then(() => {
                console.log('Service Worker unregistered in dev mode');
              });
            });
          });
          // Clear all caches
          caches.keys().then(names => {
            names.forEach(name => {
              caches.delete(name).then(() => {
                console.log('Cache deleted:', name);
              });
            });
          });
        } else {
          // Register in production
          window.addEventListener('load', () => {
            navigator.serviceWorker.register('/sw.js')
              .then(registration => {
                console.log('Service Worker registered:', registration);
              })
              .catch(error => {
                console.log('Service Worker registration failed:', error);
              });
          });
        }
      }
    </script>
  </body>
</html>